<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:background="@color/feed_bg"
    android:layout_height="match_parent"
    tools:context="zuts.bit.connect.Activities.HomeActivity.FragmentFour.FeedbackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/post_update_action_bar"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_profile_picture"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/feedback_next"
            android:background="@android:color/transparent"
            android:drawableLeft="?android:attr/textCheckMark" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:id="@+id/feedback_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00000000" />

        <TextView
            android:text="Feedback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/feedback_textView"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_update_action_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/post_update_action_bar"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/support"
            android:id="@+id/imageView4"
            android:layout_height="200dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/feedback_editText"
            android:hint="Please write down your Suggestions/Complaints"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:minHeight="181dp"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="- or -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_below="@+id/feedback_editText"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <Button
            android:text="Email Us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_email"
            android:layout_below="@+id/feedback_editText"
            android:layout_marginTop="21dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
