<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imgProfilePicDisp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_form_rounded"
            android:textAlignment="center"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_alignTop="@+id/imgProfilePicDisp"
            android:layout_toRightOf="@+id/imgProfilePicDisp"
            android:layout_toEndOf="@+id/imgProfilePicDisp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:background="@drawable/bg_form_rounded"
            android:layout_marginTop="17dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Email"
            android:layout_below="@+id/txtName"
            android:layout_alignLeft="@+id/txtName"
            android:layout_alignStart="@+id/txtName" />

        <Spinner
            android:id="@+id/txtBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:background="@drawable/bg_form_rounded"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="Branch"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_below="@+id/imgProfilePicDisp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/txtSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_marginTop="16dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:background="@drawable/bg_form_rounded"
            android:text="Semester"
            android:layout_below="@+id/txtBranch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Save Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_rounded"
            android:layout_marginTop="17dp"
            android:id="@+id/profile_save"
            android:layout_below="@+id/txtSemester"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#EB5038"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Profile" />


    </android.support.design.widget.AppBarLayout>
</RelativeLayout>
